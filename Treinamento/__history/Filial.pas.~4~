type
  TFrmFilial = class(TFrmCadastro)
    Panel5: TPanel;
    EdiCodFilial: TrsSuperEdit;
    Panel11: TPanel;
    rsSuperEdit7: TrsSuperEdit;
    Panel12: TPanel;
