procedure TFrmOperacao.FormCreate(Sender: TObject);
begin
    LabCadTit.Caption := 'Cadastro das Operações' ;
    FormOperacao := 'SIS_OPERACAO' ;
    FormTabela := 'Operacao' ;
    FormChaves := 'CodOperacao' ;
    FormCtrlFocus := 'EdiCodigo' ;
    FormDataFocus := 'EdiNome' ;
    inherited;
end;

