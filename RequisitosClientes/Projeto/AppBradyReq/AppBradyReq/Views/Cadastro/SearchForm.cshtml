@model AppBradyReq.Models.GlossarioModel

@{
    ViewBag.Title = "SearchForm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Glossário</h2>

@using (Html.BeginForm("PesquisaPeloTitulo", "Cadastro"))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
     
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">

            <div class="col-md-10">
                <label for="searchTitulo">Pesquisa pelo Titulo</label>
                <input type="text" name="searchTitulo" id="searchTitulo" class="form-control" />
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Pesquisar" class="btn btn-default" />
            </div>
        </div>
    </div>
}


